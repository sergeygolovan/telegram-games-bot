generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model General {
  code        String  @id
  description String
  image       String?
}

model Category {
  id               Int        @id @default(autoincrement())
  name             String
  description      String?
  image            String?
  isWorkInProgress Boolean    @default(true)
  parentId         Int?
  parent           Category?  @relation("CategoryHier", fields: [parentId], references: [id])
  children         Category[] @relation("CategoryHier")
  games            Game[]
}

model Game {
  id          Int       @id @default(autoincrement())
  name        String
  categoryId  Int?
  url         String
  showDetails Boolean   @default(false)
  releaseDate DateTime?
  companyName String?
  description String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Feedback {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String
  message   String
}

model Session {
  key     String  @id
  session String?

  @@map("telegraf-sessions")
}

model Notification {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  message         String
  activeUsersOnly Boolean  @default(true)
  wasHandled      Boolean  @default(false)
}
