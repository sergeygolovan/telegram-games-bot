// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator jsonSchema {
  provider = "npx prisma-json-schema-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model General {
  code        String  @id
  description String
  image       String?
}

model Category {
  id               Int        @id @default(autoincrement())
  name             String
  description      String?
  image            String?
  isWorkInProgress Boolean    @default(true)
  parentId         Int?
  parent           Category?  @relation("CategoryHier", fields: [parentId], references: [id])
  children         Category[] @relation("CategoryHier")
  games            Game[]
}

model Game {
  id          Int       @id @default(autoincrement())
  name        String
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  url         String
  showDetails Boolean   @default(false)
  releaseDate DateTime?
  companyName String?
  description String?
}

model Feedback {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String
  message   String
}
